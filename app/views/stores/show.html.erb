<h1 align="center"><%= @store.company.name %> <%= @store.name %></h1>
<h3><%= @store.catch_copy %></h3>
<h3><%= @store.introduction_text %></h3>
<br>

<h3><%= @company.name %>で売却した人の口コミ（平均評価 ★<%= @satisfaction_average.floor(1) %>）</h3>
<% @store.reviews.each do |review| %>
  <!--TODO: 口コミ詳細を作るときに口コミ詳細へのリンクを貼る-->
  <div class="card" style="width: 80rem; border: 1px solid black">
    <%= link_to review_path(review), class: "card-body text-decoration-none text-dark" do %>
      <div class="card-body">
        <p class="card-title" align="left"><%= review.headline %>： ★<%= review.satisfaction %></p>
        <p class="card-text" align="left"><%= review.satisfaction_reason %></p>
        <p class="card-text" align="right">成約価格 <%= get_cost_format(review.closing_price)%>
          (<%= review.city.prefecture.name %><%= review.city.name %>・<%= get_ymformat(review.sale_at) %>に売却)</p>
      </div>
    <% end %>
  </div>
  <br>
<% end %>
<br>

<h4><%= @store.company.name %>について</h4>
<ul>
  <li>企業名：<%= @store.company.name %></li>
  <li>郵便番号：<%= @store.postal_code %></li>
  <li>住所：<%= @store.city.prefecture.name %><%= @store.city.name %><%= @store.address %></li>
  <li>電話番号：<%= @store.phone_number %></li>
  <li>FAX：<%= @store.fax_number %></li>
  <li>営業時間：<%= @store.business_duration %></li>
  <li>定休日：<%= @store.regular_holiday %></li>
</ul>
<br>

<img src=<%= @store.company.logo_url %> alt="ロゴなし" style="border: 1px solid black">

<div align="center">
  <%= link_to "査定依頼をする", new_evaluation_request_path(ieul_store_id: @store.ieul_store_id), class: "btn btn-primary" %>
</div>
